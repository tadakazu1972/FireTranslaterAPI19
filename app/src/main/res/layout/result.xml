<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

<LinearLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="8dp">

    <Button
        android:id="@+id/btnResult"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="翻訳結果"
        android:textSize="18sp"
        android:textColor="#1111ee"
        app:backgroundTint="#eeee11"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnRs1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="傷病者情報"
            android:textSize="18sp"
            android:textColor="#ffffff"
            app:backgroundTint="#11bb11"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtRs1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ff1111"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnR1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="病気 or けが"
            android:textSize="16sp"
            android:textColor="#ffffff"
            app:backgroundTint="#ff1111"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtR1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ff1111"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnR2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="痛む部位"
            android:textSize="18sp"
            android:textColor="#ffffff"
            app:backgroundTint="#ff1111"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtR2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ff1111"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnR3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="今の症状"
            android:textSize="18sp"
            android:textColor="#ffffff"
            app:backgroundTint="#ff1111"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtR3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ff1111"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnR4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="いつから?"
            android:textSize="18sp"
            android:textColor="#ffffff"
            app:backgroundTint="#ff1111"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtR4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ff1111"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnR5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="何をしていて?"
            android:textSize="14sp"
            android:textColor="#ffffff"
            app:backgroundTint="#ff1111"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtR5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ff1111"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnR6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="既往症"
            android:textSize="18sp"
            android:textColor="#ffffff"
            app:backgroundTint="#ff1111"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtR6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ff1111"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnR7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="服用中の薬"
            android:textSize="18sp"
            android:textColor="#ffffff"
            app:backgroundTint="#ff1111"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtR7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ff1111"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnRt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="痛み/出血"
            android:textSize="14sp"
            android:textColor="#ffffff"
            app:backgroundTint="#11bb11"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtRt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ff1111"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnRh1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ｱﾚﾙｷﾞｰ/妊娠"
            android:textSize="14sp"
            android:textColor="#ffffff"
            app:backgroundTint="#11bb11"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtRh1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ff1111"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="8dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageButton
            android:id="@+id/btnClear"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:background="#00000000"
            android:src="@drawable/clear_48dp_192x192"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:src="@drawable/home_48dp_192x192"
            android:scaleType="fitCenter"/>
    </RelativeLayout>

</LinearLayout>
</ScrollView>